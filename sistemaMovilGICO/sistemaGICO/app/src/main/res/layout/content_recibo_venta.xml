<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ventas.reciboVenta"
    tools:showIn="@layout/activity_recibo_venta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="INFORMACIÃ“N DEL PEDIDO"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_margin="10dp"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivImprimirReciboVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/imprimir"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal: "
                        android:textAlignment="textEnd"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:layout_weight="4"/>

                    <TextView
                        android:id="@+id/tvSubtotalReciboVenta"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IVA (12%):  "
                        android:textAlignment="textEnd"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:layout_weight="4"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvIVAReciboVenta"
                        android:textAlignment="textEnd"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:"
                        android:textAlignment="textEnd"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:layout_weight="4"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:id="@+id/tvTotalReciboVenta"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:textSize="14dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lvReciboVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>





    </LinearLayout>
</LinearLayout>