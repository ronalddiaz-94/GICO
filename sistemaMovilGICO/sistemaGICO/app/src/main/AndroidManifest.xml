            android:name=".cliente.reciboAbonoCliente"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_recibo_abono_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".producto.reciboDevolucionProducto"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_recibo_devolucion_producto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ventas.reciboVenta"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_recibo_venta"
            android:theme="@style/AppTheme.NoActionBar" />
