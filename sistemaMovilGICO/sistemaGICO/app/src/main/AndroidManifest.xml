            android:name=".cliente.creditoCliente"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_credito_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cliente.historialCliente"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_historial_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".producto.devolucionProducto"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_devolucion_producto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".producto.regresoBodegaPrincipal"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_regreso_bodega_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bodega.asignarBodega"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_asignar_bodega"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ventas.clienteVentas"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_cliente_ventas"
